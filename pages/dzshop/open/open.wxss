page{
  height: 100%;
}
.openbox{
  width: 100%;
  
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow-y: scroll;
  
}
.opimg{
  width: 100%;
  height: 800rpx;
}
.opimg image{
  width: 100%;
  height: 100%;
}
.opin{
  box-sizing: border-box;
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}
.opin input{
  width: 60%;
  height: 60rpx;
  border-bottom: solid 1rpx #eee;
  font-size: 24rpx;
  display: block;
  margin-top: 10rpx;
}
.opin .checkd{
  width: 60%;
  height: 80rpx;
  display:flex;
  flex-direction: row;
  justify-content:space-between;
}
.checkd checkbox{
  width: 20rpx;
  height: 20rpx;
}
.checkd text{
  width: 40%;
  height: 20rpx;
  font-size: 24rpx;
  line-height: 40rpx;
}
.checkd a{
  width: 40%;
  font-size: 24rpx;
  height: 20rpx;
  line-height: 40rpx;
  color: blue;
  text-decoration: underline;
}

.opbt{
    width: 60%;
    
    display: block;
}
