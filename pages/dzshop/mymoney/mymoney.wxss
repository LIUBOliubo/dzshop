page{
  height:100%;
}
.mymoneybox{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #eee;
  
}
.lowmoney{
  box-sizing: border-box;
  width: 100%;
  height: 60rpx;
  padding: 80rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
 .lowmoney text{
   font-size: 34rpx;
   color: #222;
   font-weight: 600;
 }
 .lowmoney b{
   color: red;
   font-size: 38rpx;
   font-weight: 600;
 }
 .addmoney{
   box-sizing: border-box;
   width: 100%;
   height: 100rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-around;
   padding: 20rpx;  
 }
 .addmoney input{
   width: 50%;
   border: 1rpx solid #666;
   background-color: #fff;
   border-radius: 10rpx;
   margin-top: 10rpx;
 }
 .addmoney button{
   width: 160rpx;
   height: 70rpx;
   border: 1rpx solid #bbb;
   font-size: 38rpx;
   font-weight: 600;
   line-height: 70rpx;
   color: #fff;
   background-color: red;
 }
 .moneydata{
   flex: 1;
   width: 100%;
   display: flex;
   box-sizing: border-box;
   flex-direction: column;
   align-items: center;
   margin-top: 40rpx;
   border-top:1rpx dashed #444;
   
 }
  .moneydata .data1{
    width: 100%;
    box-sizing: border-box;
    height: 80rpx;
    background-color: lightgray;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
     margin-top: 4rpx;
  }
   .moneydata .data1 li{
     padding: 20rpx 40rpx;
    
   }
   .moneydata .data2{
     width: 100%;
     box-sizing: border-box;
     height: 80rpx;
     background-color: lightgreen;
     display: flex;
     flex-direction: row;
     justify-content: space-between;
     align-items: center;
      margin-top: 4rpx;
   }
   .moneydata .data2 li{
     padding: 20rpx 40rpx;
    
   }
 